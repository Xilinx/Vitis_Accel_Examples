{
    "name": "Burst Read/Write (OpenCL Kernel)", 
    "description": [
        "This is simple example of using AXI4-master interface for burst read and write"
    ],
    "flow": "vitis",
    "keywords": [
	"compiler.interfaceRdBurstLen",
	"compiler.interfaceWrBurstLen"
    ], 
    "key_concepts": [
        "burst access"
    ],
    "platform_blacklist": [
        "nodma"
    ], 
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "cl_burst_rw",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp", 
                "REPO_DIR/common/includes/bitmap/bitmap.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2", 
                "REPO_DIR/common/includes/bitmap"
            ]
        }
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "location": "src/vadd.cl", 
                    "clflags": "--config PROJECT/vadd_vadd.cfg", 
                    "name": "vadd"
                }
            ], 
            "name": "vadd"
        }
    ], 
    "launch": [
        {
            "cmd_args": "BUILD/vadd.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
