{
    "name": "P2P FPGA to FPGA Bandwidth Example", 
    "description": [
        "This is simple example to explain performance bandwidth for P2P transfer between two FPGA devices."
    ],
    "flow": "vitis",
    "keywords": [
        "XCL_MEM_EXT_P2P_BUFFER"
    ],
    "key_concepts": [
        "P2P",
        "Multi-FPGA Execution", 
        "XDMA"
    ],
    "num_devices": "2",
    "platform_type": "pcie",
    "os": [
        "Linux"
    ],
    "platform_blacklist": [
        "zc",
        "201910",
        "2018",
        "vck",
        "aws-vu9p-f1",
        "_u25_",
        "u30",
        "u50_gen3x16_xdma_2019"
    ],
    "targets": [	
        "hw" 	
    ],
     "runtime": [
        "OpenCL"
    ], 
    "launch": [
        {
            "cmd_args": "-x1 BUILD/bandwidth.xclbin -x2 BUILD/bandwidth.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "host": {
        "host_exe": "p2p_fpga2fpga_bandwidth", 
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "REPO_DIR/common/includes/cmdparser/cmdlineparser.cpp",
                "REPO_DIR/common/includes/logger/logger.cpp",
                "src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2",
                "REPO_DIR/common/includes/cmdparser",
                "REPO_DIR/common/includes/logger"
            ]
        }
    },  
    "containers": [
        {
            "accelerators": [
                {
                    "container" : "bandwidth",
                    "name": "bandwidth", 
                    "location": "src/bandwidth.cpp"
                }
            ], 
            "name": "bandwidth"
        }
    ],
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "profile": "no",
        "disable": false,
        "features": [
            "p2p"
        ],
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_hw"
        ],
        "category": "canary"
    }
}
