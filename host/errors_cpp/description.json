{
    "name": "Error Handling (CPP)", 
    "description": [
        "This example discuss the different reasons for errors in OpenCL C++ and how to handle them at runtime."
    ],
    "flow": "vitis",
    "keywords": [
        "CL_SUCCESS", 
        "CL_DEVICE_NOT_FOUND", 
        "CL_DEVICE_NOT_AVAILABLE", 
        "CL_INVALID_VALUE", 
        "CL_INVALID_KERNEL_NAME", 
        "CL_INVALID_BUFFER_SIZE"
    ], 
    "key_concepts": [
        "OpenCL C++ API", 
        "Error handling"
    ], 
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "errors_cpp",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        }
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "name": "vector_add", 
                    "location": "src/vector_addition.cpp"
                }
            ], 
            "name": "vector_addition"
        }
    ],
    "launch": [
        {
            "cmd_args": "BUILD/vector_addition.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ], 
    "testinfo": {
        "negative": "true",
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
