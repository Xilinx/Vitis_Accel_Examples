{
    "name": "Overlap Host and Kernel (C)", 
    "description": [
        "This examples demonstrates techniques that allow user to overlap Host(CPU) and FPGA computation in an application. It will cover asynchronous operations and event object."
    ],
    "flow": "vitis",
    "keywords": [
        "cl_event", 
        "cl::CommandQueue", 
        "CL_QUEUE_OUT_OF_ORDER_EXEC_MODE_ENABLE", 
        "enqueueMigrateMemObjects"
    ], 
    "key_concepts": [
        "OpenCL Host API", 
        "Synchronize Host and FPGA", 
        "Asynchronous Processing", 
        "Events", 
        "Asynchronous memcpy"
    ],
    "platform_blacklist": [
        "nodma"
    ], 
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "overlap",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        }
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "name": "vadd", 
                    "location": "src/vector_addition.cpp"
                }
            ], 
            "name": "vector_addition"
        }
    ],
    "launch": [
        {
            "cmd_args": "BUILD/vector_addition.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
